<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lwan.rkswl.ezen_project.activity.MainActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/main_topbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FCC762">

        <Button
            android:id="@+id/main_btn_story"
            android:layout_width="52dp"
            android:layout_height="17dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/main_view"
            android:layout_marginRight="5dp"
            android:background="#FCC762"
            android:text="스토리"
            android:textColor="#414772"
            android:textStyle="bold"
            android:textSize="15dp" />
        
        <View
            android:id="@+id/main_view_story"
            android:layout_width="52dp"
            android:layout_height="1dp"
            android:background="#414772"
            android:layout_below="@id/main_btn_story"
            android:layout_toLeftOf="@id/main_view"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:visibility="visible"/>

        <View
            android:id="@+id/main_view"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_centerInParent="true"/>

        <Button
            android:id="@+id/main_btn_picture"
            android:layout_width="32dp"
            android:layout_height="17dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/main_view"
            android:layout_marginLeft="5dp"
            android:background="#FCC762"
            android:text="사진"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="15dp" />

        <View
            android:id="@+id/main_view_picture"
            android:layout_width="32dp"
            android:layout_height="1dp"
            android:background="#414772"
            android:layout_below="@id/main_btn_story"
            android:layout_toRightOf="@+id/main_view"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="5dp"
            android:visibility="gone"/>
        
        <Button
            android:id="@+id/main_btn_setting"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:background="@drawable/setting"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"/>
        
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/main_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>


</LinearLayout>
