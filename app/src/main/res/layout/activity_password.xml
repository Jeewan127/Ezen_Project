<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.rkswl.ezen_project.PasswordActivity">

    <RelativeLayout
        android:id="@+id/pw_rl_topbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FCC762">

        <Button
            android:id="@+id/pw_back"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="22dp"
            android:background="@drawable/signup_path" />

        <TextView
            android:id="@+id/pw_txt_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="63dp"
            android:text="비밀번호 설정"
            android:textColor="#ffffff"
            android:textSize="18dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/pw_input_img1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/password_check2" />

            <ImageView
                android:id="@+id/pw_input_img2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="25dp"
                android:layout_toRightOf="@id/pw_input_img1"
                android:background="@drawable/password_check2" />

            <ImageView
                android:id="@+id/pw_input_img3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="25dp"
                android:layout_toRightOf="@id/pw_input_img2"
                android:background="@drawable/password_check1" />

            <ImageView
                android:id="@+id/pw_input_img4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="25dp"
                android:layout_toRightOf="@id/pw_input_img3"
                android:background="@drawable/password_check1" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.65">

        <RelativeLayout
            android:id="@+id/pw_rl_input1"
            android:layout_width="245dp"
            android:layout_height="55dp"
            android:layout_centerHorizontal="true">

            <Button
                android:id="@+id/pw_ib_one"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/circlr_one" />

            <Button
                android:id="@+id/pw_ib_two"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/circle_two" />

            <Button
                android:id="@+id/pw_ib_three"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/circle_three" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/pw_rl_input2"
            android:layout_width="245dp"
            android:layout_height="55dp"
            android:layout_below="@+id/pw_rl_input1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp">

            <Button
                android:id="@+id/pw_ib_four"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/circle_four" />

            <Button
                android:id="@+id/pw_ib_five"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/circle_five" />

            <Button
                android:id="@+id/pw_ib_six"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/circle_six" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/pw_rl_input3"
            android:layout_width="245dp"
            android:layout_height="55dp"
            android:layout_below="@+id/pw_rl_input2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp">

            <Button
                android:id="@+id/pw_ib_seven"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/circle_seven" />

            <Button
                android:id="@+id/pw_ib_eight"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/circle_eight" />

            <Button
                android:id="@+id/pw_ib_nine"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/circle_nine" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/pw_rl_input4"
            android:layout_width="245dp"
            android:layout_height="55dp"
            android:layout_below="@+id/pw_rl_input3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp">

            <Button
                android:id="@+id/pw_ib_clear"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/circle_c" />

            <Button
                android:id="@+id/pw_ib_zero"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/circle_zero" />

            <Button
                android:id="@+id/pw_ib_back"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/circle_arrow" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1">

        <RelativeLayout
            android:id="@+id/pw_rl_next"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/signup_botton_next">

            <TextView
                android:id="@+id/pw_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="다음"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:textStyle="bold" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
